{
  "name": "salonsync",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build-scripts": "tsc --project scripts/tsconfig.json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "init-db": "npm run build-scripts && node dist/scripts/init-db.js",
    "add-staff": "npm run build-scripts && node dist/scripts/add-staff.js",
    "check-staff": "npm run build-scripts && node dist/scripts/check-staff.js",
    "initialize-db": "ts-node --esm src/scripts/initializeDatabase.ts"
  },
  "dependencies": {
    "@types/node": "^20.11.24",
    "chart.js": "^4.4.8",
    "dotenv": "^16.5.0",
    "firebase": "^10.14.1",
    "firebase-admin": "^12.7.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
